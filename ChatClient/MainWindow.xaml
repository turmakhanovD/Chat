        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="ChatME" Height="450" Width="800">
    <Grid>
        <TextBox Name="username" HorizontalAlignment="Left" Height="22" Margin="103,14,0,0" TextWrapping="Wrap" Text="anonymous" VerticalAlignment="Top" Width="241"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="88"/>
        <TextBox IsReadOnly="True" Name="log" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="221" Width="772"/>
        <TextBox Name="message" HorizontalAlignment="Left" Height="88" Margin="10,267,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="772"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="623,360,0,0" VerticalAlignment="Top" Width="159" Click="Send"/>

    </Grid>
</Window>
